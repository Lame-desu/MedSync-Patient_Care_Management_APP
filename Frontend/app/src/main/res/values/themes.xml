<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.YourApp.SplashScreen" parent="Theme.SplashScreen">
        <!-- Background color -->
        <item name="windowSplashScreenBackground">@color/purple_1</item>

        <!-- Completely remove the icon -->
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>

        <!-- Remove any icon background -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Remove status/navigation bar coloring -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
    </style>
</resources>